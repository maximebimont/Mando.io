{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "nodemon",
			"program": "${workspaceFolder}/server/src/index.ts",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node",
			"env": {
				"SELF_SIGNED_HTTPS": "false",
			},
			"args": "--ignore ./client -- -P ./tsconfig.server.json",
			"preLaunchTask": "clean server/build folder",
		},
		{
			"name": "Debug on Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Debug on Firefox",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"port": 8008,
			"timeout": 25,
			"url": "http://localhost:8000",
			"webRoot": "${workspaceFolder}",
			"pathMappings": [
				{
					"url": "webpack://jsteam/src",
					"path": "${workspaceFolder}/src"
				},
				{ "url": "http://localhost:8000/build", "path": null }
			]
		}
	]
}
